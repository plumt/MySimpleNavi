<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="keyword"
            type="com.yun.mysimplenavi.ui.search.keyword.KeywordSearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_parent"
        android:background="@color/white">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/color_FBA53B"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start">

                <EditText
                    android:id="@+id/et_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="검색어를 입력해 주세요"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:gravity="center"
                    android:text="@={keyword.locationKeyword}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_979797"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@id/btn_search"
                    app:layout_constraintStart_toStartOf="@id/gl_start"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="@{keyword.isFocus ? View.INVISIBLE : View.VISIBLE}"
            android:id="@+id/rv_keyword_search"
            replaceAll="@{keyword.keywordSearchResults}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_title"
            tools:listitem="@layout/item_keyword_search" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_marginTop="30dp"
            android:layout_height="45dp"
            android:elevation="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="검색"
            android:textColor="@color/color_534713"
            app:cornerRadius="50dp"
            android:visibility="@{keyword.isFocus ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintStart_toStartOf="@id/gl_25"
            app:layout_constraintEnd_toEndOf="@id/gl_75"
            android:outlineProvider="none"
            app:layout_constraintTop_toBottomOf="@id/layout_title" />

<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:id="@+id/btn_x"-->
<!--            android:layout_width="45dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_height="45dp"-->
