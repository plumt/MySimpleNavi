<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemKeywordSearch"
            type="com.yun.mysimplenavi.data.model.KeywordSearchModel.RS.Documents" />

        <variable
            name="keywordSearchListener"
            type="com.yun.mysimplenavi.base.BaseRecyclerAdapter.OnItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:onClick="@{(v) -> keywordSearchListener.onItemClick(itemKeywordSearch, v)}"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{itemKeywordSearch.place_name}"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/tv_road"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{itemKeywordSearch.road_address_name}"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_half"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_place_name" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`(`+itemKeywordSearch.address_name+`)`}"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_road"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/gl_half"
            app:layout_constraintTop_toTopOf="@id/tv_road" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_half"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>